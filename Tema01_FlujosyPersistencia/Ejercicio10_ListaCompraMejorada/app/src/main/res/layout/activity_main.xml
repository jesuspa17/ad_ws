<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editConcepto"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:id="@+id/editCantidad"
        android:layout_below="@+id/editConcepto"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ‘ADIR"
        android:id="@+id/btn_anyadir"
        android:layout_alignBottom="@+id/editCantidad"
        android:layout_alignEnd="@+id/editConcepto"
        android:layout_toEndOf="@+id/editCantidad" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESETEAR"
        android:id="@+id/btn_reset"
        android:layout_below="@+id/btn_anyadir"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editConcepto" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewProductos"
        android:layout_below="@+id/btn_reset"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn_reset"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
